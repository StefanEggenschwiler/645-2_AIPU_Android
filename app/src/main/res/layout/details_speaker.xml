<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetailsSpeaker">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tw_talkname"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:id="@+id/tw_talkroom"
        android:layout_below="@+id/tw_talkname"
        android:layout_alignLeft="@+id/tw_talkname"
        android:layout_alignStart="@+id/tw_talkname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Function"
        android:id="@+id/tw_speakerfunction"
        android:layout_below="@+id/tw_talkroom"
        android:layout_alignLeft="@+id/tw_talkroom"
        android:layout_alignStart="@+id/tw_talkroom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Website"
        android:autoLink="web"
        android:id="@+id/tw_talkhour"
        android:layout_below="@+id/tw_speakerfunction"
        android:layout_alignLeft="@+id/tw_speakerfunction"
        android:layout_alignStart="@+id/tw_speakerfunction" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information"
        android:id="@+id/tw_speakersinformations"
        android:autoLink="web"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/tw_talkhour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iw_picture_speaker"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/tw_talkname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tw_talkname"
        android:layout_alignBottom="@+id/tw_talkhour" />

</RelativeLayout>
